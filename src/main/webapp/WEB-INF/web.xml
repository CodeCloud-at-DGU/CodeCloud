<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         id="WebApp_ID" 
         version="4.0">
  <display-name>CodeCloud</display-name>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- UserServlet 매핑 -->
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>controller.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>AuthSignUpServlet</servlet-name>
    <servlet-class>controller.UserSignUp</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthSignUpServlet</servlet-name>
    <url-pattern>/auth/*</url-pattern>
  </servlet-mapping>
  

  <!-- GroupServlet 매핑 -->
  <servlet>
    <servlet-name>GroupServlet</servlet-name>
    <servlet-class>controller.GroupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GroupServlet</servlet-name>
    <url-pattern>/group/*</url-pattern>
  </servlet-mapping>

  <!-- PostServlet 매핑 -->
  <servlet>
    <servlet-name>PostServlet</servlet-name>
    <servlet-class>controller.PostServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostServlet</servlet-name>
    <url-pattern>/post/*</url-pattern>
  </servlet-mapping>

  <!-- AuthIndex.jsp 매핑 -->
  <servlet>
    <servlet-name>AuthIndex</servlet-name>
    <jsp-file>/views/Auth/authIndex.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthIndex</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

</web-app>
